<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- Story Background Image -->
    <ImageView
        android:id="@+id/story_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/sample_photo_4" />

    <!-- Top Toolbar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/close_add_story_button"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_close"
            android:background="@drawable/circle_background"
            android:padding="6dp"
            app:tint="@color/white" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/user_tagging_button"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_user_tag"
            android:background="@drawable/circle_background"
            android:padding="6dp"
            android:layout_marginEnd="8dp"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/text_tool_button"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_text"
            android:background="@drawable/circle_background"
            android:padding="6dp"
            android:layout_marginEnd="8dp"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/sticker_button"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_sticker"
            android:background="@drawable/circle_background"
            android:padding="6dp"
            android:layout_marginEnd="8dp"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/music_button"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_music"
            android:background="@drawable/circle_background"
            android:padding="6dp"
            android:layout_marginEnd="8dp"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/effects_add_button"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_effects_plus"
            android:background="@drawable/circle_background"
            android:padding="6dp"
            android:layout_marginEnd="8dp"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/more_tools_button"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_more_dots"
            android:background="@drawable/circle_background"
            android:padding="6dp"
            app:tint="@color/white" />

    </LinearLayout>

    <!-- Bottom Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingBottom="32dp">

        <!-- Story Sharing Options -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:id="@+id/your_stories_button"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:background="@drawable/story_share_background"
                android:paddingHorizontal="20dp"
                android:gravity="center"
                android:layout_marginEnd="16dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/profile_placeholder" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your stories"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/close_friends_button"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:background="@drawable/close_friends_background"
                android:paddingHorizontal="20dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_close_friends"
                    android:layout_marginEnd="8dp"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Close Friends"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/share_story_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_arrow_forward"
                android:background="@drawable/share_button_background"
                android:padding="12dp"
                android:layout_marginStart="16dp"
                app:tint="@color/white" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>